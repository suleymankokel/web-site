    <script>
        // Tüm seçenekleri (radio butonları) seçiyoruz
        document.querySelectorAll('.option-input').forEach(input => {
            // Her bir seçeneğe bir 'change' (değişim) olayı ekliyoruz
            input.addEventListener('change', (event) => {
                const secilenInput = event.target;
                const soruBloku = secilenInput.closest('.question-block');
                const soruGrubuAdi = secilenInput.name;
                const aciklamaKutusu = soruBloku.querySelector('.explanation');

                // O sorudaki diğer tüm seçenekleri pasif hale getir (tekrar tıklanamasın)
                document.querySelectorAll(`input[name="${soruGrubuAdi}"]`).forEach(radio => {
                    radio.disabled = true;
                });
                
                // İlgili sorunun açıklama kutusunu görünür yap
                if (aciklamaKutusu) {
                    aciklamaKutusu.style.display = 'block';
                }
            });
        });
    </script>

